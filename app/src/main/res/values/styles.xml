<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#fbc02d</item>
        <!-- Background color of buttons in the app -->
        <item name="colorPrimaryDark">#ffa000</item>
        <item name="colorAccent">#ffa000</item>
        <item name="colorButtonNormal">#f57f17</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>

    </style>
</resources>